<?xml version="1.0" encoding="UTF-8" ?>
<dt-option group="option">
	<name>search.search</name>
	<summary>Set an initial filtering condition on the table.</summary>
	<since>1.10</since>

	<type type="string" />

	<description>
		Search term that should be applied to the table.
	</description>

	<example title="Set an initial filter"><![CDATA[
$('#example').dataTable( {
  "search": {
    "search": "Fred"
  }
} );
]]></example>

	<related type="option">search</related>
	<related type="option">searchCols</related>
	<related type="option">search</related>
	<related type="option">search.caseInsensitive</related>
	<related type="option">search.regex</related>
	<related type="option">search.smart</related>
	<related type="api">search()</related>
	<related type="api">columns().search()</related>
</dt-option>