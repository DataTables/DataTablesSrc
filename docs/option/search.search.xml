<?xml version="1.0" encoding="UTF-8" ?>
<dt-option group="option">
	<name>search.search</name>
	<summary>Set an initial filtering condition on the table.</summary>
	<since>1.10</since>

	<type type="string" />

	<description>
		Search term that should be applied to the table.
	</description>

	<example title="Set an initial filter"><![CDATA[
new DataTable('#myTable', {
	search: {
		search: 'Fred'
	}
});
]]></example>

	<related>-init search</related>
	<related>-init searchCols</related>
	<related>-init search</related>
	<related>-init search.caseInsensitive</related>
	<related>-init search.regex</related>
	<related>-init search.return</related>
	<related>-init search.smart</related>
	<related>-api search()</related>
	<related>-api columns().search()</related>
</dt-option>