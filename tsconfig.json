{
	"compilerOptions": {
        "target": "ES5",
        "module": "ES6",
		"moduleResolution": "node10",
        "lib": ["es2017", "es2016", "dom"],
        "allowUnreachableCode": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "declaration": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
    "include": [
        "js/index.ts",
		"js/integration/dataTables.*.ts"
    ],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"extensions",
		"examples"
	]
}